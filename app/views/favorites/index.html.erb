<div class="container">
	<% if flash[:notice] %>
		<div style="color:limegreen;">
			<%= flash[:notice] %>
		</div>
	<% end %>
	<% if flash[:alert] %>
		<div style="color:limegreen;">
			<%= falsh[:alert] %>
		</div>
	<% end %>

	<div class="row">
		<div class="col-md-3">
			<%= render 'users/profile', user: current_user, book: @book_new %>
		</div>

		<div class="col-md-9">
			<h3>Who likes this book?</h3>
			<% @book.favorites.each do |favorite| %>
			<table class="table">
				<tbody>
					<tr>
						<td><%= attachment_image_tag favorite.user, :profile_image, size:(8*8), fallback: "no_image.jpg" %></td>
						<td><%= favorite.user.name %></td>
					</tr>
				</tbody>
			</table>
			<% end %>
		</div>
	</div>
</div>
